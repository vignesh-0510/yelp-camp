<% include ../partials/header %>

<div class='container'>
    <center><h1>Edit  <%=campground.name%></h1></center>
    <div class='row' style="width:30%; margin:25px auto;">
            <form method ="POST" action="/campgrounds/<%=campground._id%>?_method=PUT">
                <div class='form-group'>
                    <input type ="text" class= 'form-control' name = 'campground[name]' value="<%= campground.name%>">
                </div>
                <div class='form-group'>
                    <input type ="text" class= 'form-control'name ='campground[image]' value="<%= campground.image%>">
                </div>
                <div class='form-group'>
                    <input type ="text" class= 'form-control'name ='campground[description]' value="<%= campground.description%>">
                </div>
                <div class='form-group'>
                    <button type='Submit' class= 'btn btn-primary btn-lg btn-block'>Submit</button>
                </div>
            </form>
            <a href='/campgrounds'>Go Back</a>
    </div>
    
</div>
<% include ../partials/footer %>