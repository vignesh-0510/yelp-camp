<% include ../partials/header %>

<div class='container'>
    <center><h1>Edit Comment </h1></center>
    <div class='row' style="width:30%; margin:25px auto;">
            <form method ="POST" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT">
                <div class='form-group'>
                    <input type ="text" class= 'form-control' name = 'comment[text]' value="<%= comment.text%>">
                </div>
                <div class='form-group'>
                    <button type='Submit' class= 'btn btn-primary btn-lg btn-block'>Submit</button>
                </div>
            </form>
            <a href='/campgrounds/<%= campground_id%>'>Go Back</a>
    </div>
</div>
<% include ../partials/footer %>