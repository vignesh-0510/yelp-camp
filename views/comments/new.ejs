<% include ../partials/header %>

<div class='container'>
    <center><h1>Add new Comment to <%= campground.name%> </h1></center>
    <div class='row' style="width:30%; margin:25px auto;">
            <form method ="POST" action="/campgrounds/<%= campground._id %>/comments">
                <div class='form-group'>
                    <input type ="text" class= 'form-control' name = 'comment[text]' placeholder="Text">
                </div>
                <div class='form-group'>
                    <input type ="text" class= 'form-control'name ='comment[author]' placeholder="Author">
                </div>
                <div class='form-group'>
                    <button type='Submit' class= 'btn btn-primary btn-lg btn-block'>Submit</button>
                </div>
            </form>
            <a href='/campgrounds/<%= campground._id%>'>Go Back</a>
    </div>
</div>
<% include ../partials/footer %>